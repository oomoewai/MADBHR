@model MADBHR_Data.Models.TbYearlyBonus
@{
    var controller = "YearlyBonus";
    ViewData["Title"] = "All " + controller;
}
<section class="content">

    <div class="box">
        <div class="box-header">

            <h4 class="text-blue text-bold">နှစ်တိုးခံစားခွင့်နှင့်ပတ်သက်သောအချက်အလက်များဖြည့်သွင်းရန်</h4>
