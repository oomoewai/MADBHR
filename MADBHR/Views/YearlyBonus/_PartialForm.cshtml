        <div class="box-body">
            <div class="row">
                <form action="/@controller/@ViewData["Action"]" method="post" enctype="multipart/form-data">

                    @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                    {
                        <input asp-for="EmployeeCode" hidden />

                    }
                    <input asp-for="YearlyBonusPkid" hidden />
                    @*}*@
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-1">ကိုယ်ပိုင်အမှတ်</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="SerialNumber">
                                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                </div>
                            </div>


                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">အမိန့်စာရက်စွဲ</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="date" class="form-control" id="field-2" asp-for="ApprovedDate">
                                    <span asp-validation-for="ApprovedDate" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">အမိန့်စာအမှတ်</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-2" asp-for="ApprovedNo">
                                    <span asp-validation-for="ApprovedNo" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-4">နှစ်တိုးအကြိမ်</label>
                                <input type="text" class="form-control" id="field-2" asp-for="YearlyBonusCount">
                                <span asp-validation-for="YearlyBonusCount" class="text-danger"></span>

                            </div>
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-2">နှစ်တိုးလစာငွေကျပ်</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-2" asp-for="YearlyBonusSalary">
                                    <span asp-validation-for="YearlyBonusSalary" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-3">နှစ်တိုးရက်စွဲ</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="date" class="form-control" id="field-3" asp-for="YearlyBonusDate">
                                    <span asp-validation-for="YearlyBonusDate" class="text-danger"></span>
                                </div>
                            </div>


                        </div>
                       
                        <div class="col-xs-12  padding-bottom-30">
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary gradient-blue">သိမ်းမည်</button>
                                <button type="button" data-href="/@controller/index" class="btn btn-click">နောက်သို့ပြန်သွားမည်</button>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</section>