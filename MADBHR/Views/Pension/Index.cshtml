@using MADBHR.Enum
@using X.PagedList
@model IPagedList<MADBHR_Models.Employee.VMPensionEmpCount>
@{
    var controller = "Pension";
    ViewData["Title"] = "All " + controller;
    var count = 1;
    var query = Context.Request.Query;
    var StateDivisionCode = query["StateDivisionCode"];
    ViewData["Query"] = query;

}
<div class="panel-group" id="accordion" role="tablist" aria -multiselectable="true">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne1">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class='fa fa-search'></i> Search
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne1">
            <div class="panel-body">
                <form method="get" action="/@controller/Index">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label" for="ToDate">တိုင်းဒေသကြီးများ</label>
                                <div class="controls">
                                    <select class="form-control" name="StateDivisionCode" value="@StateDivisionCode" asp-items="ViewBag.StateDivision" id="stateDivision">
                                        <option selected="selected" value="">---ရွေးရန်---</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">&nbsp;</label>
                                <div class="controls">
                                    <button type="submit" class="btn btn-primary gradient-blue">ရှာဖွေရန်</button>
                                    <a asp-controller="@controller" asp-action="Index" class="btn btn-primary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="box">
        <header class="panel-heading">
            <h5 class="title pull-left" style="font-weight:bold">ပင်စင်စာရင်းများကြည့်ရန်</h5>
            <div class="pull-right header_style">
                <a asp-controller="@controller" asp-action="Create" class="btn btn-xs btn-secondary" style="width: 80px; height: 25px; padding: 3px;">အသစ်ထည့်ရန်</a>
            </div>
        </header>
        <div class="box-body" style="margin-top:30px;">
            <div class="row">
                <div class="col-xs-12">

                    <table id="example" class="display table table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>စဉ်</th‌>
                                <th>တိုင်းဒေသကြီး</th>
                                <th>မြို့နယ်ပေါင်း</th>
                                <th>ဝန်ထမ်းပေါင်း</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@((((int)ViewBag.Page - 1) * (int)ViewBag.PageSize) + count)</td>
                                    <td class="text-center">@item.StateDivision</td>
                                    <td class="text-center">@item.TownshipCount</td>
                                    <td class="text-center">@item.EmployeeCount</td>
                                    <td class="text-center">
                                        <a asp-controller="Pension" asp-action="Detail" asp-route-StateDivisionCode="@item.StateDivisionCode" class="btn btn-xs btn-secondary">မြို့နယ်အလိုက်သေးစိတ်ကြည့်ရန်</a>
                                        @*<a asp-controller="@controller" asp-action="Edit" asp-route-Id="@item.EmployeePkid" class="btn btn-xs btn-secondary">ပြင်ရန်</a>
                                            <button asp-controller="@controller" asp-action="Delete" asp-route-Id="@item.EmployeePkid" class="btn btn-xs btn-secondary"
                                                        onclick="DeleteConfirm('/@controller/Delete/',@item.EmployeePkid)">
                                                    ပယ်ဖျက်ရန်
                                                </button>*@
                                    </td>

                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                    <partial name="_Pagination" model="Model" view-data="ViewData" />
                </div>
            </div>
        </div>
    </div>
</section>