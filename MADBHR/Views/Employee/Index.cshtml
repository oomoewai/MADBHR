@section Scripts{
    <script>
        const commonUrl = @Json.Serialize(@Configuration.GetSection("AppUrls").GetSection("TestUrl").Value);
        function Confirm(EmployeeCode, requestType) {
            $.ajax({

                url: commonUrl+ '/Employee/ChangeConfirm?EmployeeCode=' + EmployeeCode + '&RequestType=' + requestType,
                type: 'POST',
                ContentType: 'application/json;utf-8',
                datatype: 'json',
                success: function (res) {
                    window.location = commonUrl+"/Employee/Index";
                }

            });
        }

    </script>
}