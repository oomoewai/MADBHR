
@using MADBHR.Enum
@*@model MADBHR_Models.Employee.VMRequestEmployee*@
@model MADBHR_Data.Models.TbLeaveEntitlement
@{
    var controller = "LeaveEntitlement";
    ViewData["Title"] = "All " + controller;
}
<section class="content">

    <div class="box">
        <div class="box-header">

            <h4 class="text-blue text-bold">ခွင့်ခံစာချက်နှင့်ပတ်သက်သောအချက်အလက်များဖြည့်သွင်းရန်</h4>
        </div>
        <div class="box-body">
            <div class="row">
                <form action="/@controller/@ViewData["Action"]" method="post" enctype="multipart/form-data">

                    @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                    {
                        <input asp-for="EmployeeCode" hidden />

                    }
                    <input asp-for="LeaveEntitlementPkid" hidden />
                    @*}*@
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-1">ကိုယ်ပိုင်အမှတ်</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="SerialNumber">
                                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                                </div>
                            </div>


                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">အမိန့်စာရက်စွဲ</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="date" class="form-control" id="field-2" asp-for="ApprovedDate">
                                    <span asp-validation-for="ApprovedDate" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">အမိန့်စာအမှတ်</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-2" asp-for="ApprovedNo">
                                    <span asp-validation-for="ApprovedNo" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-2">ခွင့်ခံစားမည့်ရက်စွဲ (မှ)</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="date" class="form-control" id="field-2" asp-for="StartDate">
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-3">ခွင့်ခံစားမည့်ရက်စွဲ (ထိ)</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="date" class="form-control" id="field-3" asp-for="EndDate">
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 form-group">
                                <label class="form-label" for="field-2">ကာလ</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-2" asp-for="Period" >
                                    <span asp-validation-for="Period" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-4">ခွင့်အမျိုးအစား</label>
                                <select class="form-control" asp-for="LeaveTypeCode" asp-items="ViewBag.LeaveType">
                                    <option selected="selected" value="">ခွင့်အမျိုးအစားရွေးပါ </option>
                                </select>
                                <span asp-validation-for="LeaveTypeCode" class="text-danger"></span>

                            </div>

                        </div>
                        <div class="col-xs-12  padding-bottom-30">
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary gradient-blue">သိမ်းမည်</button>
                                <button type="button" data-href="/@controller/index" class="btn btn-click">နောက်သို့ပြန်သွားမည်</button>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</section>