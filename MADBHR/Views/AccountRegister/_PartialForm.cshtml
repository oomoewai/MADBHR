@using MADBHR.Enum
@*@model MADBHR_Models.Employee.VMRequestEmployee*@
@model MADBHR_Data.Models.TbUserLogin
@{
    var controller = "AccountRegister";
    ViewData["Title"] = "All " + controller;
}
<section class="content">

    <div class="box">
        <div class="box-header">

            <h4 class="text-blue text-bold">Account Register</h4>
        </div>
        <div class="box-body">
            <div class="row">
                <form action="/@controller/@ViewData["Action"]" method="post" enctype="multipart/form-data">

                    @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                    {
                        <input asp-for="UserPkid" hidden />

                    }
                    <input asp-for="UserPkid" hidden />
                    @*}*@
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-1">Name</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="Name" >
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-name">Email</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-email" asp-for="UsernameOrEmail" onchange="CheckEmail()">
                                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">Password</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="password" class="form-control" id="field-password" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">Confirm Password</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="password" class="form-control" id="ConfirmPassword" onchange="Change()">                                  
                                </div>
                            </div>
                        </div>
                        <div class="row">
                       
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-3">Office</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="Office" asp-items="ViewBag.Office">
                                        <option selected="selected" value="">---choose--- </option>
                                    </select>
                                    <span asp-validation-for="Office" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-3">Department</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="Department" asp-items="ViewBag.Department">
                                        <option selected="selected" value="">---choose--- </option>
                                    </select>
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-2">Account</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="AccountType" asp-items="ViewBag.AccountType" id="accountType" onchange="TypeChange()">
                                        <option selected="selected" value="">---choose--- </option>
                                    </select>
                                    <span asp-validation-for="AccountType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-5" id="field-5">တိုင်း‌ရုံး</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="StateDivisionId" asp-items="ViewBag.StateDivisionCodeForHeadAdmin" id="StateDivisionForHeadAdmin">
                                        <option selected="selected" value="">---choose--- </option>
                                    </select>
                                    <span asp-validation-for="StateDivisionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-6" id="field-6">တိုင်း‌ဒေသကြီး</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="StateDivisionId" asp-items="ViewBag.StateDivisionCode" id="StateDivision" onchange="StateDivisionChange()">
                                        <option selected="selected" value="">---choose--- </option>
                                    </select>
                                    <span asp-validation-for="StateDivisionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="form-label" for="field-5" id="lblTownship">မြို့နယ်</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="TownshipId"  id="townshipId">
                                        <option selected="selected" value="">---choose--- </option>
                                    </select>
                                    <span asp-validation-for="TownshipId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12  padding-bottom-30">
                            <div class="text-left">
                                <button type="submit" class="btn btn-primary">သိမ်းမည်</button>
                                <button type="button" data-href="/@controller/index" class="btn btn-primary">နောက်သို့ပြန်သွားမည်</button>
                            </div>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</section>
